set noequalalways
set   expandtab
set   hlsearch
set   incsearch
set nojoinspaces
set   list
set   ruler
set   showcmd
set   showmatch
set   visualbell
set   wildmenu

set backspace=indent,eol,start
set fileformats=unix,dos,mac
set formatoptions=tcq
set laststatus=2
set listchars=tab:>-,trail:-
set matchtime=2
set shiftwidth=4
set shortmess=filmnxtToOI
set softtabstop=4
set tabstop=4
set textwidth=78
set wildmode=longest:full
set winminheight=0

set background=dark
syntax on
